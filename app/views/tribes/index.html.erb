<div class="container">
  <h1 class="center-align">List of Tribes</h1>
  <div class="row">
    <% @tribes.each do |tribe| %>
      <div class="col s12 m4">
        <%= link_to tribe_path(tribe) do %>
          <div class="card border">
            <div class="card-image">
              <% if tribe.photo? %>
                <%= cl_image_tag tribe.photo.path, crop: :fill %>
              <% end %>
              <span class="card-title"><%= tribe.name %></span>
            </div>
            <div class="card-content primary-txt">
              <p><%= tribe.about %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
