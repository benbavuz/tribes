<div id="map"> </div>
  <div class="section">
    <div class="container">
      <div class="row">
          <h2 class="center-align"><%= @hut.name %></h2>
        <div class="col s12 m6">
          <ul class="">
            <li><i class="material-icons">email</i><%= ": " + @hut.user.email %></li>
            <% if @hut.user.phone_number? %>
            <li><i class="material-icons">phone</i><%= ": " + @hut.user.phone_number %></li>
            <% end %>
            <li><i class="material-icons">location_on</i><%= ": " + @hut.address+", "+@hut.zip_code %></li>
            <li><%= @hut.city+", "+@hut.country %></li>
          </ul>
        </div>
        <div class="col s12 m6">
          <ul class="collapsible" data-collapsible="accordion">
              <li>
                <div class="collapsible-header active"><i class="material-icons">info_outline</i>About</div>
                <div class="collapsible-body"><span><%= @hut.about %></span></div>
              </li>
              <li>
                <div class="collapsible-header"><i class="material-icons">import_export</i>Equipments</div>
                  <div class="collapsible-body">
                  <% @hut.equipments.each do |equipment| %>
                    <div class='chip'><%= equipment.name %></div>
                  <% end %>
                  </div>
              </li>
              <li>
                <div class="collapsible-header"><i class="material-icons">done</i>Minimum requirements</div>
                <div class="collapsible-body"><span></span></div>
              </li>
            </ul>
        </div>
        <div class="col s12 m12">
          <div class="carousel carousel-slider center" data-indicators="true">
            <div class="carousel-fixed-item center">
              <a class="btn waves-effect white grey-text darken-text-2">Booking the hut</a>
            </div>
            <% if @hut.photos.blank? %>
                <a class="carousel-item" href="#"><img src="https://s2.qwant.com/thumbr/0x0/5/1/327f1a9730f8f9a3db456dc43e0588/b_1_q_0_p_0.jpg?u=http%3A%2F%2Fst.depositphotos.com%2F1029662%2F1324%2Fv%2F950%2Fdepositphotos_13242438-Africa-Red-Indian-Eskimo-Man-Woman-National-Traditional-Costume-Dress-Clothing-Icon-Symbol-Sign-Pictogram.jpg&q=0&b=1&p=0&a=1"></a>
              <% else %>
                <% @hut.photos.each do |photo| %>
                  <a class="carousel-item" href="#"><%= cl_image_tag(photo.path) %></a>
                <% end %>
            <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>

<!-- JS script for map rendering -->

<% content_for(:after_js) do %>
    <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(11);
        }
      });
    });
    $(window).scroll(function(){
        if($(window).scrollTop()<$('#map').height() + 21)
          $('#map').css({'transform':'translate(0px,'+$(window).scrollTop()+'px)'});
      });
    $('.carousel.carousel-slider').carousel({fullWidth: true});
  <% end %>
<% end %>
