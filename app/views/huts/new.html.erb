<div class="container">
  <div class = "row">
    <div class = "col s12 col m8 offset-m2 col l8 offset-l2 login-form" >
      <div class = "card-panel">
        <h4 class="center-align">Add your hut</h4>
        <%= simple_form_for @hut do |f| %>
        <%= f.input :name%>
        <%= f.input :about %>
        <%= f.input :capacity %>
        <%= f.association :equipments, collection: equipments_collection, multiple: true %>
        <%= f.input :address %>
        <%= f.input :address2 %>
        <%= f.input :zip_code%>
        <%= f.input :city %>
        <%= f.input :country %>
        <div class="file-field input-field">
          <div class="btn btn-input-file-cyan">
            <span>Photo</span>
            <%= f.input :photos, as: :attachinary, label: false %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text" placeholder="Upload one file only please">
          </div>
        </div>
        <div class="center-align">
          <%= f.submit "Add my hut", class: 'btn-large waves-effect waves-light amber' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
