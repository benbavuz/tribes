<div class="container search-bar">
<h5 class="">Find a hut</h5>
  <form class="row" action="<%= huts_path %>" method="get">
    <div class="input-field col s3">
      <input class="datepicker" type="date" name="date" placeholder="Check In (Date)" required>
    </div>
    <div class="input-field col s3">
      <select type = "time" name = "start_time" required>
        <option value="" disabled selected>From</option>
        <option value="08:00:00">08:00</option>
        <option value="09:00:00">09:00</option>
        <option value="10:00:00">10:00</option>
        <option value="11:00:00">11:00</option>
        <option value="12:00:00">12:00</option>
        <option value="13:00:00">13:00</option>
        <option value="14:00:00">14:00</option>
        <option value="15:00:00">15:00</option>
        <option value="16:00:00">16:00</option>
        <option value="17:00:00">17:00</option>
        <option value="18:00:00">18:00</option>
        <option value="19:00:00">19:00</option>
      </select>
      </div>

     <div class="input-field col s3">
      <select type = "time" name = "end_time" required>
        <option value="" disabled selected>To</option>
        <option value="09:00:00">09:00</option>
        <option value="10:00:00">10:00</option>
        <option value="11:00:00">11:00</option>
        <option value="12:00:00">12:00</option>
        <option value="13:00:00">13:00</option>
        <option value="14:00:00">14:00</option>
        <option value="15:00:00">15:00</option>
        <option value="16:00:00">16:00</option>
        <option value="17:00:00">17:00</option>
        <option value="18:00:00">18:00</option>
        <option value="19:00:00">19:00</option>
        <option value="20:00:00">20:00</option>
      </select>
    </div>
    <div class="input-field col s3">
      <input class="waves-effect waves-light btn-large amber" type="submit" name="search">
    </div>
  </form>


  <div class="row">
    <h1 class="center-align">List of huts</h1>
    <% @huts.each do |hut| %>
      <%= render partial: "card", object: hut, as: :hut %>
    <% end %>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>

    $('.datepicker').pickadate();

    $('.timepicker').pickatime();

  <% end %>
<% end %>

